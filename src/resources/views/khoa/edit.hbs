<div class="mt-4">
    <h3>Sửa Khoa</h3>
    <form method="POST" action="/khoa/{{ khoa._id }}?_method=PUT">
        <div class="mb-3">
            <label for="mota" class="form-label">Mô tả</label>
            <textarea  class="form-control" id="mota" name="mota">{{ khoa.mota }}</textarea>
        </div>
        <div class="mb-3">
            <label for="ten" class="form-label">Tên</label>
            <input type="text" class="form-control" value="{{ khoa.ten }}" id="ten" name="ten">
        </div>
       <div class="mb-3">
            <label for="vdid" class="form-label"></label>
            <input type="text" class="form-control" value="{{ khoa.vdid}}" id="vdid" name="vdid">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>