<div class = "mt-4">
    <div class = "row">

        {{#each khoa}}
            <div class="col-sm-6 col-lg-4">
                <div class="card" style="width: 18rem;">
                    <a href="/khoa/{{ slug }}">
                     <img src="{{ this.pic }}" class="card-img-top" alt="{{ this.ten }}"></a>
                   
                    <div class="card-body">
                        <a href="/khoa/{{ slug }}">
                            <h5 class="card-title">{{ this.ten }}</h5>
                        </a>
                        <p class="card-text">{{ this.mota }}</p>
                        <a href="#" class="btn btn-primary">Xem</a>
                    </div>
                </div>
            </div>
        {{/each}} 

    </div>
</div>