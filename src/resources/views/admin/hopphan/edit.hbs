<div class='mt-4'>
  <h3>Sửa hp</h3>
  <form method='POST' action='/hopphan/{{hp._id}}?_method=PUT'>
    <div class='mb-3'>
      <label for='name' class='form-label'>Tên hp</label>
      <input type='text' class='form-control' id='name' name='name' value='{{hp.name}}' required />
    </div>
    <div class='mb-3'>
      <label class='form-label fw-bold'>Nội dung:</label>
      <textarea
        class='form-control'
        name='content'
      >{{{hp.content}}}</textarea>
    </div>

    <button type='submit' class='btn btn-success'>Cập nhật</button>
  </form>
</div>
