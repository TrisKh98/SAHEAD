<div class='mt-4'>
  <h3>Sửa Tag</h3>
  <form method='POST' action='/tags/{{tag._id}}?_method=PUT'>
    <div class='mb-3'>
      <label for='name' class='form-label'>Tên Tag</label>
      <input type='text' class='form-control' id='name' name='name' value='{{tag.name}}' required />
    </div>

    <button type='submit' class='btn btn-success'>Cập nhật</button>
  </form>
</div>
