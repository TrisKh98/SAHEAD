<div class="container mt-5">
    <h2 class="text-center text-primary">Thêm Event</h2>
    <form method="POST" action="/events/{{ event._id }}?_method=PUT" enctype="multipart/form-data" class="border p-4 shadow rounded bg-light">
        <div class="mb-3">
            <label class="form-label fw-bold">Tên:</label>
            <input type="text" class="form-control" name="name" value="{{{ event.name }}}" required>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Tổng quan:</label>
            <textarea class="form-control" name="overview">{{{ event.overview }}}</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Mục tiêu:</label>
            <input type="text" class="form-control" name="aim" value="{{{ event.aim }}}">
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Hoạt động:</label>
            <textarea class="form-control" name="activities">{{{ event.activities }}}</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Kết quả:</label>
            <input type="text" class="form-control" name="outcomes" value="{{{ event.outcomes }}}">
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">url:</label>
            <input type="text" class="form-control" name="url" value="{{{ event.url }}}">
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Ngày đăng:</label>
            <input type="text" class="form-control" name="dateup" value="{{{ event.dateup }}}">
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Hình ảnh hiện tại:</label>
            <div>
                <img src="{{ event.image }}" alt="Hình ảnh" class="img-thumbnail" width="150">
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Hình ảnh:</label>
            <input type="file" class="form-control" name="image" accept="image/*">
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Sửa</button>
    </form>
</div>

