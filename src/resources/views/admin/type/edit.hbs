<div class='mt-4'>
  <a href='/events/type/view'>Xem</a>
  <h3>Sửa Type</h3>
  <form method='POST' action='/events/type/{{Type._id}}?_method=PUT'>
    <div class='mb-3'>
      <label for='name' class='form-label'>Tên</label>
      <input
        type='text'
        class='form-control'
        value='{{Type.name}}'
        id='name'
        name='name'
      />
    </div>

    <button type='submit' class='btn btn-primary'>Sửa</button>
  </form>
</div>